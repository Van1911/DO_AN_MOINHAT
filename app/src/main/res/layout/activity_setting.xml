<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnQuayLai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded_yellow"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:paddingEnd="50dp"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <Switch
            android:id="@+id/swNotification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_notifications_active_24"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:text="\tThông báo" />

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded_yellow"
            android:drawableLeft="@drawable/icon_language_30"
            android:drawableRight="@drawable/baseline_expand_more_24"
            android:text="Ngôn ngữ"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded_yellow"
            android:drawableLeft="@drawable/icon_warning_30"
            android:text="Phiên bản"
            android:textAlignment="textStart"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>