<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_rounded_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/baseline_arrow_back_ios_23" />

                <TextView
                    android:id="@+id/txThemVe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:paddingRight="80dp"
                    android:text="Thêm vé"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Mã vé:"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/edtthemIDve"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_rounded_white"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nơi đi:"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/edtThemNoiDI"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rounded_white"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nơi đến:"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtThemNoiDen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rounded_white"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Giá tiền:"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtThemGiaVe"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rounded_white"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yellow"
                    android:padding="7dp"
                    android:text="Thêm"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_rounded_grey">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstDSve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>